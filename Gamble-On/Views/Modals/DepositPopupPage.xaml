<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Gamble_On.Models"
             xmlns:viewmodel="clr-namespace:Gamble_On.ViewModels"
             x:DataType="viewmodel:DepositPopupViewModel"
             x:Class="Gamble_On.Views.Modals.DepositPopupPage"
             Title="RegisterPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Amount" />
        <Entry Placeholder="Enter amount" Text="{Binding DepositAmount}" />

        <StackLayout Orientation="Horizontal">
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
            <Button Text="Continue" Command="{Binding ContinueCommand}" />
        </StackLayout>

    </StackLayout>

</ContentPage>
