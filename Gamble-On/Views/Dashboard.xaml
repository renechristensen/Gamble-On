<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Gamble_On.Views.Controls"
    x:Class="Gamble_On.Views.Dashboard"
             Title="Dashboard">

    <VerticalStackLayout>

        <!-- DoubleTopBar Control -->
        <controls:DoubleTopBar RufusCommand="{Binding NavigateRufusCommand}" 
                               DrDkCommand="{Binding NavigateDrDkCommand}" />

        <!-- Rest of the content -->
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>